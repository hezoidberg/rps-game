<h1>Rock-Paper-Scissors</h1>
<!-- Button trigger modal -->
<button id="rock" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Rock
</button>
<button id="paper" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Paper
</button>
<button id="scissors" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Scissors
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
          Your bet: <span id="user-pick">ololo</span>
        </div>
        <div>
          curb: 
          <span id="comp-pick">
            <div class="spinner-border d-none" role="status">
              <span class="sr-only">Loading...</span>
            </div>
          </span>
        </div>
        <div>
          Result: <span id='result'></span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
